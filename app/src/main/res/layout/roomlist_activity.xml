<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/underDivider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        android:background="#4682B4"
        app:layout_constraintBottom_toTopOf="@+id/roomlist_search" />

    <ImageView
        android:id="@+id/roomlist_document"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/roomlist_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roomlist_search"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/documenticon" />

    <ImageView
        android:id="@+id/roomlist_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/roomlist_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roomlist_search"
        app:srcCompat="@drawable/profileicon" />

    <ImageView
        android:id="@+id/roomlist_search"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/roomlist_profile"
        app:layout_constraintStart_toEndOf="@+id/roomlist_document"
        app:srcCompat="@drawable/searcgicon" />


</androidx.constraintlayout.widget.ConstraintLayout>