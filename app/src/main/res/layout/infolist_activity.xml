<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="게시물"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/infotop_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/infotop_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="2dp"
        android:background="#4682B4"
        app:layout_constraintBottom_toTopOf="@+id/info_recyclerView"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/infounder_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#4682B4"
        app:layout_constraintTop_toBottomOf="@+id/info_recyclerView" />

    <ImageView
        android:id="@+id/infolist_document"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/infolist_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infolist_search"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/documenticon" />

    <ImageView
        android:id="@+id/infolist_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/infolist_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infolist_search"
        app:srcCompat="@drawable/profileicon" />

    <ImageView
        android:id="@+id/infolist_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/infolist_profile"
        app:layout_constraintStart_toEndOf="@+id/infolist_document"
        app:layout_constraintTop_toBottomOf="@+id/info_recyclerView"
        app:srcCompat="@drawable/searcgicon" />

    <ImageView
        android:id="@+id/info_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/infotop_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/info_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-30dp" />

    <ImageView
        android:id="@+id/info_writing"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/info_setting"
        app:layout_constraintEnd_toStartOf="@+id/info_setting"
        app:layout_constraintTop_toTopOf="@+id/info_setting"
        app:srcCompat="@drawable/pencil" />


</androidx.constraintlayout.widget.ConstraintLayout>