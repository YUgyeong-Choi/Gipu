<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/userinfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="유저 정보 기입"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/userinfo_profiletitle"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="프로필" />

        <ImageView
            android:id="@+id/userinfo_profileImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:srcCompat="@drawable/profileicon" />

        <TextView
            android:id="@+id/userinfo_nicknametitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="닉네임" />

        <EditText
            android:id="@+id/userinfo_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:ems="8"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/userinfo_textdesign"
            android:hint="이름을 입력해주세요" />

        <TextView
            android:id="@+id/userinfo_next"
            android:layout_marginTop="150dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="#4682B4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="다음" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>